
<div class="container row">
  <div class="card col-4" >
      <% if @list.photo.attached? %>
        <%= cl_image_tag @list.photo.key, crop: :fill %>
      <% end %>
      <div class="card-body">
        <% @list.bookmarks.each do |bookmark| %>
            <p class="card-title"><%= bookmark.comment %></p>
            <p class="card-subtitle"><%= bookmark.movie.title %>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><%= bookmark.movie.rating %></p>
            <div style= "background-image: url('<%= image_tag bookmark.movie.poster_url, class: "poster-img" %>');">
            </div>
            <%= link_to "Delete", bookmark_path(bookmark), class: "btn",
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
      </div>
  </div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-secondary m-4" %>
</div>
